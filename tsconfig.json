{
  "compilerOptions": {
    "target": "ES2021",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "module": "commonjs",
    "lib": ["ESNext"],
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": ["./src"],
  "exclude": ["./src/tests"]
}
